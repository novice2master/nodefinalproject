<div class="container">
    <form method="POST" action="/song_search">
        <div>
            <input type="text" class="song-search" placeholder="Song Name" id="song_lyrics" name="song_lyrics">
            <input type="text" class="song-search" placeholder="Artist" id="song_artist" name="song_artist">
        </div>

        <button type="submit" class="btn" id="find-btn">Find</button>
    </form>
</div>
<div class="container song-backdrop">
    <div id="container containerMargin">
        <div class="d-flex justify-content-center">
            <h2 class="display-4" id="song_title">{{song}}</h2>
        </div>
        <hr class="my-4">
        <div class="d-flex justify-content-center">
            <h3 class="lead" id="song_artist">{{artist}}</h3>
        </div>
        <hr class="my-4">
        <div class="d-flex justify-content-center" id="lyrics_holder">
            <p>{{lyrics}}</p>
        </div>
    </div>
</div>

